{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "runGCC",
            "type": "shell",
            "command": "g++",
            "args": [
                "-fopenmp",
                "-Wall",
                "-I./include/",
                "-L./lib/",
                "-o/build/blocksort",
                "main.cpp",
                "-lcurl"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            }
        },
        {
            "label": "runICPC",
            "type": "shell",
            "command": "./build.local.sh",
            "args": [//compiler version
                "18"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            }
        }
    ]
}